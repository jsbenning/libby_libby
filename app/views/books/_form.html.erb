<%= form_for ([@user, @book ]) do |f|  %>

  <%= f.label :title  %>
  <%= f.text_field :title %><br />

  <%= f.label :author_last_name %>
  <%= f.text_field :author_last_name %><br />

  <%= f.label :author_first_name %>
  <%= f.text_field :author_first_name %><br />

  <%= f.label :isbn %>
  <%= f.text_field :isbn %><br />


  <%= f.label "Condition" %><br />
  Like New <%= f.radio_button :condition, "Like New" %><br />
  Good <%= f.radio_button :condition, "Good" %><br />
  Fair <%= f.radio_button :condition, "Fair" %><br />

  <%= f.label :description%><br />
  <%= f.text_area :description %><br />

  Genre(s): <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
  <%= f.fields_for :genres, @book.genres.build do |genres_fields| %><br />
    Add a Genre: <%= genres_fields.text_field :name %><br />
  <% end %><br />
  <%= f.submit %>
  
<% end %>



