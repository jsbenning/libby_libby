<header>
      <p class="navbar-text pull-right">

  <% if user_signed_in? %>
    Signed in as <strong><%= current_user.email %></strong> |
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
    <%= link_to "Sign in", new_user_session_path, :class => 'navbar-link'  %> |
    <%= link_to image_tag('fb-favicon.ico'), user_facebook_omniauth_authorize_path, :class => 'navbar-link' %>
  <% end %><br>
  
  <% if current_user && current_user.admin? %>
  <nav class="admin_nav">
    <h2>***ADMIN***</h2>
    <ul>
      <li><%= link_to "View/Delete Users", users_path %> </li>
    </ul>

  <% elsif current_user && current_user.mod? %>
  <nav class="mod_nav">
    <h2>***MOD***</h2>
    <ul>
      <li><%= link_to "View Users", users_path %> </li>
    </ul>
  <% end %>

  <% if current_user %>
  <hr>
  <input type="image" class="col-xs-12 col-md-3" id="profile" data-id="<%= current_user.id %>" <%= image_tag "profile_btn.png" %>
  <input type="image" class="col-xs-12 col-md-3"id="mybooks" data-id="<%= current_user.id %>" <%= image_tag "books_btn.png" %>
  <input type="image" class="col-xs-12 col-md-3"id="mytrades" data-id="<%= current_user.id %>" <%= image_tag "trades_btn.png" %>
  <input type="image" class="col-xs-12 col-md-3"id="allbooks" <%= image_tag "allbooks_btn.png" %>
    <nav class="logged_in_nav">
        <ul>
          <li> <%= link_to "See My Profile", user_path(current_user) %> </li>
          <li> <%= link_to "Browse All Books", books_path %> </li>
          <li> <%= link_to "See My Books", user_books_path(current_user.id) %> </li>
          <li> <%= link_to "See My Trades", trades_path %> </li>
      </ul>
    </nav> 
  <% end %>
</header>
<hr>


