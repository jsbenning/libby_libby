<!DOCTYPE html>
<html>
  <head>
    <title>LibbyLibby</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
  <div id="banner">
    <div id="wrapper">
        <div id="container">
                <img class="banner-img-large" <%= image_tag "banner1.png" %> 
        </div>
    </div>
  </div>


    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

  </head>

  <%= render 'layouts/header' %>


  <body>
    <%= yield %>
  </body>
  <footer>
   
<% if current_user && !(current_user.uid) %>
<p><%= button_to "Change My Password", edit_user_registration_path(current_user), :method => 'get', :class => 'btn btn-primary' %></p>
<% end %>

<% if current_user %>
<p><%= button_to "Edit My Profile", edit_user_path(current_user), :method => 'get', :class => 'btn btn-primary' %></p>

<p><%= button_to "Delete My Account", registration_path(:user, as: :accounts), :class => 'btn btn-primary', data: { confirm: "Are you sure?" }, method: :delete %></p>
 <% end %>   

    <div class='little-text'>
    </br >
    <hr>
      Images Provided by <a href="http://www.openlibrary.org">The Open Library Project</a> 
    </div>
  </footer>
</html>
